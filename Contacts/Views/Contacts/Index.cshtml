@using Contacts.Models
@model Contact

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-lg-8 col-lg-offset-2">

        @{ 
            //List<Contact> contacts = (List<Contact>)ViewBag.contacts;
            Html.RenderPartial("_ListContact");
        }
    </div>
</div>
<div id="new-contact" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create new contact</h4>
            </div>
            @using (Html.BeginForm("create", "contacts", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName)
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName)
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.DoB)
                                @Html.TextBoxFor(m => m.DoB, new { @class = "form-control", placeholder = "Year/Month/Day" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Notes)
                                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", placeholder = "Notes" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Photo)
                                @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", placeholder = "Notes", type = "file" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Phone.Phone)
                                @Html.TextBoxFor(m => m.Phone.Phone, new { @class = "form-control", placeholder = "Mobile no" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email.Email)
                                @Html.TextBoxFor(m => m.Email.Email, new { @class = "form-control", placeholder = "Email address" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }
        </div>
    </div>
</div>
