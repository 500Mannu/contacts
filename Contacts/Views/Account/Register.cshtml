@model Contacts.Models.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center">OAB Register</h2>
    </div>
    <div class="col-lg-4 col-lg-offset-4">
        @using (Html.BeginForm("register", "account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.EmailAddress, new { @class = "" })
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Email adderess" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
</div>
